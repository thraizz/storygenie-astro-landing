---
import PriceCard from "./PriceCard.astro";
---

<div>
  <h2 id="prices">Our Prices</h2>
  <p class="subtitle">
    Choose an affordable plan that's packed with features you will love.
  </p>
  <div class="price-cards">
    <PriceCard
      tierName="Basic"
      description="The basic functionalities to get going with Storygenie."
      features={["Create stories", "Share stories"]}
    />
    <PriceCard
      tierName="Pro"
      price="29"
      description="All advanced features of Storygenie."
      features={[
        "Everything in Basic",
        "Collaboration features",
        "Export stories",
        "Analyics",
        "Priority support",
      ]}
    />
  </div>
</div>
<style lang="scss">
  h2 {
    margin-bottom: 0;
  }
  .subtitle {
    text-align: center;
    font-size: 16px;
    margin-bottom: 24px;
  }
  .price-cards {
    display: grid;
    grid-template-columns: repeat(2, minmax(300px, 1fr));
    gap: 1rem;
    max-width: 100vw;
    overflow-y: scroll;
  }
</style>
